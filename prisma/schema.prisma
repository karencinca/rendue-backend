generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String     @id @default(uuid())
  name       String
  email      String     @unique
  password   String
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  properties Property[]
  tenants    Tenant[]

  @@map("users")
}

model Property {
  id          String   @id @default(uuid())
  name        String
  address     String
  description String
  image       String
  userId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id])
  Tenants     Tenant[]
  Rental      Rental[]

  @@map("properties")
}

model Tenant {
  id         String   @id @default(uuid())
  name       String
  email      String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  property   Property @relation(fields: [propertyId], references: [id])
  user       User     @relation(fields: [userId], references: [id])
  propertyId String
  userId     String
  rentalId   String
  Rental     Rental[]

  @@map("tenants")
}

model Rental {
  id         String   @id @default(uuid())
  checkin    DateTime
  checkout   DateTime
  tenant     Tenant   @relation(fields: [tenantId], references: [id])
  tenantId   String
  property   Property @relation(fields: [propertyId], references: [id])
  propertyId String

  @@map("rentals")
}
